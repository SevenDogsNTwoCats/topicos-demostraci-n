    src: "https://img.daisyui.com/images/stock/photo-1601004890684-d8cbf643f5f2.jpg",
    alt: "Pizza",
  },
];
---

<Layout title="About">
  <main>
    <div class="bg-gradient-to-b from-[#101212] relative to-[#1c0820]">
      <section
        class="relative lg:min-h-[100px] pt-24 pb-10 sm:pt-32 sm:pb-16 lg:pb-24"
      >
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8 relative z-20">
            <h1 class="flex justify-center text-6xl font-bold sm:text-8xl">
            <span
              class="animated-gradient text-center py-4 text-transparent bg-clip-text bg-gradient-to-r from-[#7b29ff] to-white"
            >
              Login
            </span>
            </h1>
          <div class="max-w-xl mx-auto text-center">
            <form class="mt-10">
              <div class="mb-6">
            <label for="email" class="block mb-2 text-lg text-white ">Email</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-purple-600" required>
              </div>
              <div class="mb-6">
            <label for="password" class="block mb-2 text-lg text-white">Password</label>
            <input type="password" id="password" name="password" class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-purple-600" required>
              </div>
              <div class="flex justify-center">
            <a href="/dashboard" type="submit" class="px-6 py-3 text-lg font-semibold text-white bg-purple-600 rounded-lg hover:bg-purple-500 focus:outline-none focus:bg-purple-500" >Login</a>
              </div>
            </form>
          </div>
        </div>
        </div>
      </section>

      <ImageCarousel images={images} />
    </div>
  </main>
</Layout>
<style>
  @keyframes moveGradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animated-gradient {
    @apply bg-gradient-to-r from-[#ffffff] via-[#7b29ff] to-[#ff0095];
    background-image: linear-gradient(to right, #fff494, #7b29ff, #ff0095, #ffffff);
    background-size: 200% 200%;
    animation: moveGradient 4s ease infinite;
  }
</style>